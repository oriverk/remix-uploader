{
  "hosting": {
    "site": "uploader-x193",
    "public": "./packages/hosting/dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/health",
        "function": {
          "functionId": "healthCheck"
        }
      },
      {
        "source": "/files/feed",
        "function": {
          "functionId": "returnRSS"
        }
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "functions": {
    "engines": {
      "node": "18"
    },
    "source": "/packages/functions",
    "region": "asia-northeast1"
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "storage": {
    "rules": "storage.rules"
  }
}
